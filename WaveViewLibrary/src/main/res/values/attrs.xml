<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WaveView">
        <attr name="waveColor" format="reference|color" />
        <attr name="waveCount" format="integer" />
        <attr name="waveWidth" format="dimension" />
        <attr name="waveAnimDuration" format="integer" />
        <attr name="waveAnimDelay" format="integer" />
        <attr name="waveMargin" format="dimension" />
        <attr name="waveMinRatio" format="float" />
        <attr name="waveGravity" format="enum">
            <enum name="bottom" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>
</resources>